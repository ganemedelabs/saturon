{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
